[user]
	name = Posquit0.BJ
  email = posquit0.bj@gmail.com
[push]
  # push should only push current branch, not all branches
  default = current
[help]
  autocorrect = 1

[core]
	editor = vim
[merge]
  tool = vimdiff

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  commit = green bold
  meta = green bold
  frag = green bold
  func = green
  plain = yellow
  old = red
  new = cyan
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  co    = checkout
  s     = status -sb
  st    = status --short --branch --untracked-files=no
  sta   = status --short --branch --untracked-files=normal
  sync  = !git pull && git push
  ta    = tag -a

# allows: git clone github:rails/rails
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"
[url "git://gist.github.com/"]
  insteadOf = "gist:"
[url "git@heroku.com:"]
  insteadOf = "heroku:"
